<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.revolut">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.application.RevolutApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_revolut"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_revolut"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        tools:ignore="AllowBackup">
        <activity android:name=".features.splash.presentation.view.activity.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".features.rates.presentation.view.activity.RateActivity"/>

    </application>
</manifest>
